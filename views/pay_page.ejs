<%- include header.ejs%>

<div class="panel panel-default">
    <div class="panel-heading my_panel_head_left">
        <h3 class="panel-title">购物清单</h3>
    </div>
    <div id="pay_panel_body" class="panel-body">
        <table class="table table-bordered">
            <thead>
            <td>分类</td>
            <td>名称</td>
            <td>单价（元）</td>
            <td>单位</td>
            <td>数量</td>
            <td>小计</td>
            </thead>
            <tbody id="bought_list_body">

            </tbody>
        </table>
    </div>

    <div class="panel-heading my_panel_head_left">
        <h3 class="panel-title">赠送商品</h3>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <thead>
            <td>分类</td>
            <td>名称</td>
            <td>数量</td>
            </thead>
            <tbody id="promotion_body">

            </tbody>
        </table>
        <div class="my_panel_tail">
            <p>总计：<span id="total_payments">0.00</span>元</p>
            <p>节省：<span id="saved_money">0.00</span>元</p>
            <p><a id="total_pay_button" class="btn btn-primary btn-lg" href="product_list.html">确认</a></p>
        </div>
    </div>
</div>

<%- include footer.ejs%>